{
  "credentials": {
    "supabase": {
      "name": "Supabase PowerChip",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Authorization",
        "value": "Bearer ${SUPABASE_ANON_KEY}"
      }
    },
    "mercadopago": {
      "name": "MercadoPago PowerChip",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Authorization",
        "value": "Bearer ${MERCADOPAGO_ACCESS_TOKEN}"
      }
    },
    "ecommerce_api": {
      "name": "PowerChip E-commerce API",
      "type": "httpHeaderAuth",
      "data": {
        "name": "Authorization",
        "value": "Bearer ${ECOMMERCE_ADMIN_TOKEN}"
      }
    },
    "smtp_gmail": {
      "name": "Gmail SMTP PowerChip",
      "type": "smtp",
      "data": {
        "user": "${GMAIL_USER}",
        "password": "${GMAIL_APP_PASSWORD}",
        "host": "smtp.gmail.com",
        "port": 587,
        "secure": false,
        "requireTLS": true
      }
    },
    "smtp_custom": {
      "name": "Custom SMTP PowerChip",
      "type": "smtp",
      "data": {
        "user": "${SMTP_USER}",
        "password": "${SMTP_PASSWORD}",
        "host": "${SMTP_HOST}",
        "port": "${SMTP_PORT}",
        "secure": "${SMTP_SECURE}",
        "requireTLS": "${SMTP_TLS}"
      }
    }
  },
  "webhooks": {
    "order_created": {
      "url": "http://localhost:5678/webhook/order-created",
      "method": "POST",
      "description": "Webhook chamado quando um novo pedido é criado"
    },
    "payment_status": {
      "url": "http://localhost:5678/webhook/payment-status",
      "method": "POST",
      "description": "Webhook chamado quando o status de pagamento muda"
    },
    "low_stock": {
      "url": "http://localhost:5678/webhook/low-stock",
      "method": "POST",
      "description": "Webhook chamado quando o estoque fica baixo"
    },
    "product_review": {
      "url": "http://localhost:5678/webhook/product-review",
      "method": "POST",
      "description": "Webhook chamado quando uma nova avaliação é feita"
    },
    "daily_report": {
      "url": "http://localhost:5678/webhook/daily-report",
      "method": "POST",
      "description": "Webhook para gerar relatório diário"
    }
  },
  "environment_variables": {
    "required": [
      "SUPABASE_URL",
      "SUPABASE_ANON_KEY",
      "MERCADOPAGO_ACCESS_TOKEN",
      "ECOMMERCE_ADMIN_TOKEN"
    ],
    "optional": [
      "GMAIL_USER",
      "GMAIL_APP_PASSWORD",
      "SMTP_USER",
      "SMTP_PASSWORD",
      "SMTP_HOST",
      "SMTP_PORT",
      "SMTP_SECURE",
      "SMTP_TLS"
    ]
  }
}